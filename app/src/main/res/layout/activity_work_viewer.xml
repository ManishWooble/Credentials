<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:scrollbars="none"
    tools:context=".Work_viewer_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/ubuntu"
            android:lineHeight="15dp"
            android:text="Title:"
            android:textColor="#B3FFFFFF"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/et_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:elevation="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_edittext_background"
            android:fontFamily="@font/ubuntu"
            android:gravity="center_vertical"
            android:text="Pinewoods RO Treatment Plant and Wellfield Phase 2"
            android:padding="10dp"
            android:textColor="#CCFFFFFF"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_project_name"
          />

        <TextView
            android:id="@+id/tv_project_aim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/ubuntu"
            android:lineHeight="15dp"
            android:text="Objective:"
            android:textColor="#B3FFFFFF"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_project_name"
            android:layout_marginTop="30dp"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/et_project_aim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:elevation="8dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/ubuntu"
            android:background="@drawable/login_edittext_background"
            android:gravity="center_vertical"
            android:text="The objective of this project is to assist in the comletion of the
pine woods Reverse Osmosis Water Treatment Plant and Lower Hawthorne Wellfield Phase 2 to help meet the City's water supply demands."
            android:padding="10dp"
            android:textColor="#CCFFFFFF"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_project_aim"
            />

        <TextView
            android:id="@+id/tv_about_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:fontFamily="@font/ubuntu"
            android:lineHeight="15dp"
            android:text="Description:"
            android:textColor="#B3FFFFFF"
            android:textFontWeight="400"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_project_aim"
            android:layout_marginTop="30dp"
            tools:targetApi="p" />

        <TextView
            android:id="@+id/et_about_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:elevation="8dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/login_edittext_background"
            android:fontFamily="@font/ubuntu"
            android:gravity="center_vertical"
            android:text="Fiscal Year 2007 work will complete construction of 3.2 mgd water treatment facility and
four Lower. Hawthorne Floridan Aquifer Production wells. Work will include construction of RO equipment , high service pups , mechanical equipment , yard piping , wellfield piping , electrical equipment , production wells, monitoring wells, raw water
pipelines, and related appurtences."
            android:padding="10dp"
            android:textColor="#CCFFFFFF"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_about_project"
            />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_about_project"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toBottomOf="@id/et_about_project"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/et_about_project"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView1"
            app:riv_border_color="#333333"
            android:layout_marginStart="20dp"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            android:layout_marginStart="10dp"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            android:layout_marginEnd="20dp"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.google.android.exoplayer2.ui.StyledPlayerControlView
            android:id="@+id/exo_play"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:visibility="visible"
            android:layout_marginTop="25dp"
            />




        <com.google.android.material.card.MaterialCardView
            android:id="@id/add_pdf"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/exo_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover_background">

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@null"
                    android:contentDescription="@null"
                    android:elevation="5dp"
                    android:src="@drawable/ic_more"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/pdf_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/sample_work"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_pdf_title"
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="10dp"
                    android:ellipsize="end"
                    android:text="Statement of Work (SOW).pdf"
                    android:textFontWeight="400"
                    android:maxLines="1"
                    android:layout_gravity="start"
                    android:textColor="#CCFFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="@font/ubuntu"
                    android:elevation="5dp"
                    android:textSize="15sp"
                    tools:targetApi="p" />


                <View
                    android:id="@+id/View2"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:background="@drawable/blog_shadow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>