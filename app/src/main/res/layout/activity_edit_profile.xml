<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252627"
    tools:context=".Edit_Profile_Activity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cover_photo">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:fontFamily="@font/ubuntu"
                    android:lineHeight="15dp"
                    android:text="Full Name"
                    android:textColor="#B3FFFFFF"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:targetApi="p" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/login_edittext_background"
                    android:elevation="8dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center_vertical"
                    android:hint="Andrew"
                    android:inputType="textEmailAddress"
                    android:lineHeight="15dp"
                    android:padding="12dp"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#CCFFFFFF"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/ubuntu"
                    android:lineHeight="15dp"
                    android:text="Mobile Number"
                    android:textColor="#B3FFFFFF"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_name"
                    tools:targetApi="p" />

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints=""
                    android:background="@drawable/login_edittext_background"
                    android:elevation="8dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center_vertical"
                    android:hint="9876543210"
                    android:inputType="number"
                    android:lineHeight="15dp"
                    android:padding="12dp"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#CCFFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_number"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/ubuntu"
                    android:lineHeight="15dp"
                    android:text="Your email"
                    android:textColor="#B3FFFFFF"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_number"
                    tools:targetApi="p" />

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints=""
                    android:background="@drawable/login_edittext_background"
                    android:elevation="8dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center_vertical"
                    android:hint="youremail@example.com"
                    android:inputType="textEmailAddress"
                    android:lineHeight="15dp"
                    android:padding="12dp"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#CCFFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email"
                    tools:targetApi="p" />

                <TextView
                    android:id="@+id/tv_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="15dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/ubuntu"
                    android:text="Password"
                    android:textColor="#B3FFFFFF"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_email"
                    tools:ignore="UnusedAttribute" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="5dp"
                    android:autofillHints=""
                    android:background="@drawable/login_edittext_background"
                    android:drawableEnd="@drawable/ic_password_toggle"
                    android:elevation="8dp"
                    android:fontFamily="@font/ubuntu"
                    android:gravity="center_vertical"
                    android:hint="********"
                    android:inputType="textPassword"
                    android:lineHeight="15dp"
                    android:padding="12dp"
                    android:textColor="#CCFFFFFF"
                    android:textColorHint="#CCFFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_password"
                    tools:targetApi="p" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bt_update"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/group_3"
                    app:backgroundTint="@null"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:layout_marginBottom="40dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/et_password"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>