<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252627"
    tools:context=".Upload_Project_Activity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:elevation="5dp"
            android:textColorHint="#CCFFFFFF"
            app:boxBackgroundMode="none"
            app:hintTextColor="#CCFFFFFF"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/et_project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/full_name_bg"
                android:backgroundTint="@null"
                android:fontFamily="@font/ubuntu"
                android:gravity="center_vertical"
                android:hint="Project name"
                android:inputType="textAutoCorrect"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="#CCFFFFFF"
                android:textColorHint="#CCFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_project_aim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:elevation="5dp"
            android:textColorHint="#CCFFFFFF"
            app:boxBackgroundMode="none"
            app:hintTextColor="#CCFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/ti_project_name">

            <EditText
                android:id="@+id/et_project_aim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:background="@drawable/full_name_bg"
                android:backgroundTint="@null"
                android:fontFamily="@font/ubuntu"
                android:gravity="center_vertical"
                android:hint="Aim of project"
                android:inputType="textAutoCorrect"
                android:padding="15dp"
                android:singleLine="true"
                android:textColor="#CCFFFFFF"
                android:textColorHint="#CCFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_aboutYourself"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:elevation="5dp"
            android:textColorHint="#CCFFFFFF"
            app:boxBackgroundMode="none"
            app:hintTextColor="#CCFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/ti_project_aim">

            <EditText
                android:id="@+id/about_yourself"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:autofillHints=""
                android:background="@drawable/about_yourself_bg"
                android:backgroundTint="@null"
                android:fontFamily="@font/ubuntu"
                android:gravity="top|start"
                android:hint="About Project"
                android:inputType="textAutoCorrect|textMultiLine"
                android:padding="15dp"
                android:textColor="#CCFFFFFF"
                android:textColorHint="#CCFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView1"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ti_aboutYourself"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView1"
            app:layout_constraintTop_toBottomOf="@id/ti_aboutYourself"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@id/ti_aboutYourself"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView1"
            app:riv_border_color="#333333"
            android:layout_marginStart="20dp"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            android:layout_marginStart="10dp"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageView6"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cover_photo"
            android:padding="24dp"
            android:src="@drawable/place_holder"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@id/imageView3"
            app:riv_border_color="#333333"
            app:riv_border_width="2dip"
            android:layout_marginEnd="20dp"
            app:riv_corner_radius="8dp"
            app:riv_mutate_background="true" />


        <com.google.android.exoplayer2.ui.StyledPlayerControlView
            android:id="@+id/exo_play"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            app:layout_constraintTop_toBottomOf="@id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:visibility="visible"
            android:layout_marginTop="20dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/add_pdf"
            android:layout_width="130dp"
            android:layout_height="170dp"
            android:elevation="8dp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@id/exo_play"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/cover_photo"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_red"
                    android:padding="15dp"
                    android:src="@drawable/ic_pdf"
                    android:contentDescription="@null" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select pdf"
                    android:fontFamily="@font/ubuntu"
                    android:textFontWeight="700"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    tools:targetApi="p" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:id="@+id/pdf_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No file selected"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/add_pdf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#CCFFFFFF"
            android:layout_gravity="center"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ti_conclusion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:backgroundTint="@null"
            android:elevation="5dp"
            android:textColorHint="#CCFFFFFF"
            app:boxBackgroundMode="none"
            app:hintTextColor="#CCFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/pdf_textview">

            <EditText
                android:id="@+id/et_conclusion"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:autofillHints=""
                android:background="@drawable/about_yourself_bg"
                android:backgroundTint="@null"
                android:fontFamily="@font/ubuntu"
                android:gravity="top|start"
                android:hint="Conclusion"
                android:inputType="textAutoCorrect|textMultiLine"
                android:padding="15dp"
                android:textColor="#CCFFFFFF"
                android:textColorHint="#CCFFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_register"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/group_3"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Publish"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ti_conclusion"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





</ScrollView>