<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252627"
    tools:context=".Onboarding_2Activity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_on_boarding"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:src="@drawable/ic_onboarding_2_bg"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_im"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#306fb2"
            android:textStyle="italic|bold"
            android:fontFamily="@font/ubuntu"
            app:layout_constraintTop_toBottomOf="@id/iv_on_boarding"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:layout_marginStart="18dp"/>

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_im"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:hint="your profession "
            android:inputType="textPersonName"
            android:textColorHint="#B3FFFFFF"
            android:backgroundTint="#AEC5E0"
            android:textColor="#CCFFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp"
            android:autofillHints="" />


        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            android:layout_marginTop="30dp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="10dp"
            android:text="Be as specific as possible so we can give you the best and most personalized experience. Below some examples."
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu"
            android:textFontWeight="400"
            tools:targetApi="p" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/bt_next"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_bg"
            android:backgroundTint="@null"
            app:backgroundTint="@null"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Next"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/tv1"/>




    </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>