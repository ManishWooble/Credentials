<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252627"
    tools:context=".IntroActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="38dp"
        android:layout_marginTop="122dp"
        android:background="@android:color/transparent"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/intro_card"
            android:backgroundTint="@null"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_logo"
                android:layout_marginTop="10dp"
                android:layout_marginStart="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/ubuntu_light"
                android:lineHeight="24sp"
                android:text="Wooble says Hey!!"
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:targetApi="p" />

            <View
                android:layout_width="83dp"
                android:layout_height="1dp"
                android:layout_marginStart="17dp"
                android:background="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/ubuntu_light"
                android:lineHeight="16sp"
                android:text="You are"
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="14sp"
                tools:targetApi="p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu_light"
                android:lineHeight="28sp"
                android:text="Most welcome here."
                android:textColor="@color/white"
                android:textFontWeight="700"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:targetApi="p" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/ubuntu_light"
                android:lineHeight="16sp"
                android:text="Millions of people have already changed "
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="16sp"
                tools:targetApi="p" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/ubuntu_light"
                android:lineHeight="16sp"
                android:text="their lives with us. Now its your turn."
                android:textColor="@color/white"
                android:textFontWeight="400"
                android:textSize="16sp"
                tools:targetApi="p" />


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signUp"
        android:layout_width="142dp"
        android:layout_height="74dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/sign_up_bg"
        android:elevation="5dp"
        android:fontFamily="@font/poppins"
        android:lineHeight="30sp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textFontWeight="600"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@+id/btn_signIn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card"
        tools:targetApi="p" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signIn"
        android:layout_width="142dp"
        android:layout_height="74dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/sign_in_bg"
        android:elevation="5dp"
        android:fontFamily="@font/poppins"
        android:lineHeight="30sp"
        android:text="Sign In"
        android:textAllCaps="false"
        android:textColor="#323334"
        android:textFontWeight="600"
        android:textSize="20sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_signUp"
        app:layout_constraintTop_toBottomOf="@id/card"
        tools:targetApi="p" />


</androidx.constraintlayout.widget.ConstraintLayout>